<div class="h-full bg-gradient-to-r from-cyan-500 to-blue-500">

    <header class="bg-white shadow">
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
            <h1 class="text-3xl font-bold tracking-tight text-gray-900">
                Dashboard
            </h1>
        </div>
    </header>
    <main>
        <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
            <ul role="list" class="divide-y divide-gray-100">
                {{#each goal}}
              
                <li id="{{this.name}}" class="flex justify-between gap-x-6 py-5">
                    <div class="flex min-w-0 gap-x-4">
                        <div class="h-12 w-3 flex-none text-right">

                            <form action="/delete/{{this.id}}" method="POST">
                                <button class="h6 mt-3 edit-button">‚ùå</button>
                            </form>
                        </div>
                        <img
                            class="mt-4 ml-2 h-4 w-4 flex-none rounded-full bg-gray-50"
                        />
                        <div class="min-w-0 flex-auto">
                            <p
                                class="text-sm font-semibold leading-6 text-gray-900"
                            >
                                {{this.name}}
                            </p>
                            <p
                                class="mt-1 truncate text-xs leading-5 text-gray-200"
                            >
                                Started: {{this.startDate}}
                            </p>
                        </div>
                    </div>
                    <div
                        class="w-1/4 bg-gray-200 sm:flex rounded-full dark:bg-gray-700 h-4 my-4"
                    >
                        <div
                            class="bg-blue-600 text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-full"
                            style="width: {{this.completion}}%"
                        >
                            {{this.completion}}%
                        </div>
                    </div>
                     <a
                    href="/deposit"
                    class="bg-gray-200 border-2 border-slate-400  text-gray-700 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium"
                    >Deposit</a
                >
                    <div
                        class="hidden shrink-0 sm:flex sm:flex-col sm:items-end"
                    >
                        <p class="text-sm leading-6 text-gray-900">
                            ${{this.saved}}/{{this.target_amount}} Needed
                        </p>
                        <p class="mt-1 text-xs leading-5 text-gray-200">
                            Last deposited {{this.updatedAt}}
                        </p>
                    </div>
                </li>
             
              
                
                {{/each}}
            </ul>
        </div>
    </main>
</div>

